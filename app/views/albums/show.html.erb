<p id="notice"><%= notice %></p>

<p>
  <strong>Artist:</strong>
  <%= @album.artist.name %>
</p>

<p>
  <strong>Album:</strong>
  <%= @album.name %>
</p>

<p>
  <strong>Release date:</strong>
  <%= @album.released %>
</p>

<p>
  <img src="<%= @album.image %>">
</p>

<table class="table table-hover">
  <tr>
    <th>Track Number</th>
    <th>Track Name</th>
    <th>Duration</th>
    <th>Rating</th>
  </tr>

  <% @album.tracks.each do |t| %>
    <tr>
      <td><%= t.number %></td>
      <td><%= t.name %></td>
      <td><%= "#{t.duration / 60}:%02d" % (t.duration % 60) %></td>
      <td><div class="rating" id="<%= t.ratings.first.id %>" score="<%= t.ratings.first.score %>"></div></td>
    </tr>
  <% end %>
</table>


<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
