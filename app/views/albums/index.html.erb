<h1>Albums</h1>

<table class="table">
  <thead>
    <tr>
      <th>Artist</th>
      <th>Album</th>
      <th>Release date</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.artist.name %></td>
        <td><%= link_to "#{album.name}", album %></td>
        <td><%= album.released %></td>
        <td><img src="<%= album.image %>"></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>
